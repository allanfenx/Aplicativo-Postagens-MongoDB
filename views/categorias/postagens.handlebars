<h2>Lista Postagens: {{categoria.nome}}</h2>

{{#each postagens}}
  <div class="card">
    <div class="card-body">
      <h3>{{titulo}}</h3>
      <hr>
      <p>{{descricao}}</p>
      <small>Categoria: {{categoria.nome}}</small><br>
      <a href="/postagens/{{slug}}"><button class="btn btn-success mt-2">Leia mais</button></a>
    </div>
  </div>
{{else}}
  <h5>Nenhuma postagem</h5>
{{/each}}
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}    
{{/each}}
<h4>Editar Postagem:</h4>
<div class="card">
    <div class="card-body">
        
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagens._id}}" >
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" value="{{postagens.titulo}}" class="form-control" >

            <label for="slug">Slug:</label>
            <input type="text" name="slug" value="{{postagens.slug}}" class="form-control">
            
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" value="{{postagens.descricao}}" class="form-control" >
            
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>  

            <label for="categoria">Categoria:</label>
            <select name="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>       
            <button type="submit" class="btn btn-success mt-2">Editar Postagem</button>   
        </form>
    </div>
</div>